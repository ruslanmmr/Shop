    .footer__container.row.mb--30
      .footer__background.contain
        img.lazy(data-src='img/logos/logo.svg' alt='bg')
      .footer-nav.mb-30.col-xl-auto.order-2
        .row.justify-center.mb--30
          ul.footer-nav__list.mb-30.col-xl-auto
            li.footer-nav__item
              a(href="#").link.link_bordered.footer-nav__link О компании
