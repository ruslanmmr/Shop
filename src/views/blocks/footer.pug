        .footer__top-section
          .socials
            ul.socials__list.row.compact
              li.socials__item.col-xl-auto.mb-15
                a(href="#").socials__link
                  i.fab.fa-vk
              li.socials__item.col-xl-auto.mb-15  
                a(href="#").socials__link
                  i.fab.fa-facebook-f
              li.socials__item.col-xl-auto.mb-15 
                a(href="#").socials__link
                  i.fab.fa-instagram
              li.socials__item.col-xl-auto.mb-15 
                a(href="#").socials__link
                  i.fab.fa-twitter
              li.socials__item.col-xl-auto.mb-15 
                a(href="#").socials__link
                  i.fab.fa-odnoklassniki
          img(src="img/payment.png" alt="payment").footer__pay-img
